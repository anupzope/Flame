$rule singleton(
  icGagePressure, icTemperature, icVelocity
  <-
  initialConditions, Pambient
), constraint(singleSpecies) {
  LOG(INFO) << "Parsing initialConditions for single species";
  
  bool pSet = false;
  double gagePressure = 0.0;
  
  bool tSet = false;
  double temperature = 0.0;
  
  bool vSet = false;
  Loci::vector3d<double> velocity(0.0, 0.0, 0.0);
  
  options_list::option_namelist li = $initialConditions.getOptionNameList();
  
  std::ostringstream errmsg;
  int error = 0;
  
  for(auto const & optName : li) {
    if(optName == "p") {
      std::ostringstream ss;
      double value;
      int err = getOptionValue(
        $initialConditions, optName, "Pa", value, ss
      );
      
      if(err) {
        errmsg << "[Error parsing initialConditions::p : " << ss.str() << "]";
        ++error;
      } else {
        pSet = true;
        gagePressure = value - $Pambient;
      }
    } else if(optName == "T") {
      std::ostringstream ss;
      double value;
      int err = getOptionValue(
        $initialConditions, optName, "K", value, ss
      );
      
      if(err) {
        errmsg << "[Error parsing initialConditions::T : " << ss.str() << "]";
        ++error;
      } else {
        tSet = true;
        temperature = value;
      }
    } else if(optName == "u" || optName == "v") {
      std::stringstream ss;
      std::vector<double> values;
      int err = getOptionValues(
        $initialConditions, optName, {"m/s", "m/s", "m/s"}, 1, 3, values, ss
      );
      
      if(err) {
        errmsg << "[Error parsing initialConditions::" << optName
          << " : " << ss.str() << "]";
        ++error;
      } else {
        vSet = true;
        switch(values.size()) {
        case 1:
          velocity.x = values[0];
          velocity.y = 0.0;
          velocity.z = 0.0;
          break;
        case 2:
          velocity.x = values[0];
          velocity.y = values[1];
          velocity.z = 0.0;
          break;
        case 3:
          velocity.x = values[0];
          velocity.y = values[1];
          velocity.z = values[2];
          break;
        }
      }
    } else {
      errmsg << "[unknown option " << optName << " in initialConditions]";
      ++error;
    }
  }
  
  if(!pSet || !tSet || !vSet) {
    errmsg << "[initialConditions requires p, T, and v/u]";
    ++error;
  }
  
  if(error) {
    LOG(ERROR) << errmsg.str();
    Loci::Abort();
  }
  
  $icGagePressure = gagePressure;
  $icTemperature = temperature;
  $icVelocity = velocity;
}

