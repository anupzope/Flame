$rule singleton(
  icGagePressure, icTemperature, icVelocity, icSpeciesY
  <-
  initialConditions, Pambient, Ns
), constraint(multiSpecies) {
  LOG(INFO) << "Parsing initialConditions for multi species";
  
  bool pSet = false;
  double gagePressure = 0.0;
  
  bool tSet = false;
  double temperature = 0.0;
  
  bool vSet = false;
  Loci::vector3d<double> velocity(0.0, 0.0, 0.0);
  
  bool ySet = false;
  std::vector<double> speciesY($Ns, 0.0);
  
  options_list::option_namelist li = $initialConditions.getOptionNameList();
  
  std::ostringstream errmsg;
  int error = 0;
  
  for(auto const & optName : li) {
    if(optName == "p") {
      std::ostringstream ss;
      double value;
      int err = getOptionValue(
        $initialConditions, optName, "Pa", value, ss
      );
      
      if(err) {
        errmsg << "[Error parsing initialConditions::p : " << ss.str() << "]";
        ++error;
      } {
        pSet = true;
        gagePressure = value;
      }
    } else if(optName == "T") {
      std::ostringstream ss;
      double value;
      int err = getOptionValue(
        $initialConditions, optName, "K", value, ss
      );
      
      if(err) {
        errmsg << "[Error parsing initialConditions::T : " << ss.str() << "]";
        ++error;
      } else {
        tSet = true;
        temperature = value;
      }
    } else if(optName == "u" || optName == "v") {
      std::ostringstream ss;
      std::vector<double> values;
      int err = getOptionValues(
        $initialConditions, optName, {"m/s", "m/s", "m/s"}, 1, 3, values, ss
      );
      
      if(err) {
        errmsg << "[Error parsing initialConditions::" << optName
          << " : " << ss.str() << "]";
        ++error;
      } else {
        vSet = true;
        switch(values.size()) {
        case 1:
          velocity.x = values[0];
          velocity.y = 0.0;
          velocity.z = 0.0;
          break;
        case 2:
          velocity.x = values[0];
          velocity.y = values[1];
          velocity.z = 0.0;
          break;
        case 3:
          velocity.x = values[0];
          velocity.y = values[1];
          velocity.z = values[2];
          break;
        }
      }
    } else if(optName == "Y") {
      std::ostringstream ss;
      std::vector<double> values;
      int err = getOptionValues(
        $initialConditions, optName, {}, $Ns, $Ns, values, ss
      );
      
      if(err) {
        errmsg << "[Error parsing initialConditions::Y : " << ss.str() << "]";
        ++error;
      } else {
        double sumY = 0.0;
        for(int i = 0; i < $Ns; ++i) {
          sumY += values[i];
        }
        
        if(std::fabs(sumY-1.0) > 1e-16) {
          errmsg << "[sum of the elements of initialConditions::Y must be 1.0]";
          ++error;
        }
        
        ySet = true;
        for(int i = 0; i < $Ns; ++i) {
          speciesY[i] = values[i];
        }
      }
    } else {
      errmsg << "[unknown option " << optName << " in initialConditions]";
      ++error;
    }
  }
  
  if(!pSet || !tSet || !vSet || !ySet) {
    errmsg << "[Need p, T, v/u, and Y in initialConditions]";
    ++error;
  }
  
  if(error) {
    LOG(ERROR) << "Error/s parsing initialConditions: " << errmsg.str();
    Loci::Abort();
  }
  
  $icGagePressure = gagePressure;
  $icTemperature = temperature;
  $icVelocity = velocity;
  $icSpeciesY = speciesY;
}

